<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kevinreyes.webapp.blibioteca.controller.FXController.CategoriaControllerFX">
   <children>
      <ImageView fitHeight="600.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/Categorias.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfId" editable="false" layoutX="112.0" layoutY="238.0" prefHeight="25.0" prefWidth="209.0" />
      <TextField fx:id="tfNombre" layoutX="112.0" layoutY="331.0" prefHeight="25.0" prefWidth="209.0" />
      <TableView fx:id="tblCategoria" layoutX="432.0" layoutY="200.0" onMouseClicked="#cargarFormEditar" prefHeight="264.0" prefWidth="506.0">
        <columns>
          <TableColumn fx:id="colIdCategoria" prefWidth="165.0" text="Id categoria" />
          <TableColumn fx:id="colNombreCategoria" prefWidth="340.0" text="Nombre categoria" />
        </columns>
      </TableView>
      <Button fx:id="btnGuardar" layoutX="112.0" layoutY="393.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="47.0" prefWidth="75.0" text="Guardar">
         <font>
            <Font size="13.0" />
         </font>
      </Button>
      <Button fx:id="btnLimpiar" layoutX="112.0" layoutY="471.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="47.0" prefWidth="75.0" text="Limpiar">
         <font>
            <Font size="13.0" />
         </font>
      </Button>
      <Button fx:id="btnEliminar" layoutX="863.0" layoutY="495.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="47.0" prefWidth="75.0" text="Eliminar">
         <font>
            <Font size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
